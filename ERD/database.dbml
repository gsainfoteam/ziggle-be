Project Ziggle {
    database_type: 'mariadb'
}

Table User {
    uuid varchar [pk]
    name varchar
    consent boolean
}

Table File {
    uuid varchar [pk]
    name varchar
    createdAt timestamp
    url varchar
}

Table Content {
    id integer [pk, increment]
    title varchar
    body text [note: 'we will use markdown language, korean or english']
}

Table Notice {
    id integer [pk, increment]
    views integer
    deadline date
    createdAt timestamp
    deletedAt timestamp
    content integer [ref: > Content.id]
    images varchar [ref: <> File.uuid]
    attachments varchar [ref: <> File.uuid]
    authorId varchar [ref: > User.uuid]
    reminders varchar [ref: <> User.uuid]
    tags integer [ref: <> Tag.id]
}

Table FcmToken {
    token varchar [pk]
    createdAt timestamp
    lastCheckAt timestamp
    successCount integer
    failCount integer
    errors varchar
    user varchar [ref: <> User.uuid]
}

Table Tag {
    id integer [pk, increment]
    name varchar
}